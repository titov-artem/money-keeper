<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>
    <bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor"/>

    <!-- system -->
    <bean id="clock" class="java.time.Clock" factory-method="systemDefaultZone"/>

    <import resource="http-server-ctx.xml"/>
    <import resource="cxf-container-ctx.xml"/>
    <import resource="controllers-ctx.xml"/>
    <import resource="services-ctx.xml"/>
    <import resource="storage-ctx.xml"/>

</beans>